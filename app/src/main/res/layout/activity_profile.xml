<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    android:padding="20dp"
    tools:context=".Profile">
    <TextView
        android:id="@+id/name_label"
        android:text="Name"
        android:textSize="20dp"
        android:textColor="@color/black_1"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/name_text_view"
        />
    <TextView
        android:id="@+id/name_text_view"
        android:text="Abcd"
        android:textSize="20dp"
        android:textColor="@color/black_1"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/name_label"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/email_label"
        android:text="Email"
        android:textSize="20dp"
        android:textColor="@color/black_1"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/email_text_view"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        />
    <TextView
        android:id="@+id/email_text_view"
        android:text="Abcd@gmail.com"
        android:textSize="20dp"
        android:textColor="@color/black_1"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/name_text_view"
        app:layout_constraintStart_toEndOf="@id/email_label"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/phone_label"
        android:text="phone"
        android:textSize="20dp"
        android:textColor="@color/black_1"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/email_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/phone_text_view"
        />
    <TextView
        android:id="@+id/phone_text_view"
        android:text="018XXXXXXXX"
        android:textSize="20dp"
        android:textColor="@color/black_1"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/email_text_view"
        app:layout_constraintStart_toEndOf="@id/phone_label"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/update_button"
        android:text="Update profile"
        android:elevation="5dp"
        android:textColor="@color/black"
        android:outlineProvider="bounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>